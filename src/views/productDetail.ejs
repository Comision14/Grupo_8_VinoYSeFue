                <img src="/images/logo.png" alt="sin imagen">
            </div>

            <div class="header_principal_buscador">
                <input type="Buscar..." id="Buscar..." placeholder="Buscar..." />
                <button><span class="icon"><i class="fa fa-search"></i></span></button>
            </div>

            <div class="header_principal_iconos">

                <div class="header_principal_burger_menu">
                    <button>
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="header_principal_sesion_carrito">

                    <ul type="none">
                        <div class="iconos">
                            <div>
                                <button>
                                    <i class="fa-solid fa-user"></i>
                                    <li><a href="/users/login">Iniciar sesion</a></li>
                                </button>
                            </div>
                            <div>
                                <button>
