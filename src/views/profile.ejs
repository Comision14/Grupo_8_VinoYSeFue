<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head',{stylesheets: 'profile.css'}) 
 %>  
<body>
    <%- include('./partials/header') %> 
   <main>
    <%- include('./partials/baner') %> 

    <div class="mi_perfil" >

        <div class="mi_perfil_foto">
            
            <img src="/images/default-user.png" alt="Insertar Imagen">
        </div>
        <div>
            <h1 >Mi Perfil</h1>
        </div>
        <div class="mi_perfil_informacion">

            <form action="" class="form">

                <div class="inputContainer">
                   <label class="label">Nombre</label></br>
                    <input type="text" class="input" value="<%= user.firstname %>">
                    
                </div>

                <div class="inputContainer">
                    <label class="label">Apellido</label></br>
                    <input type="text" class="input" value="<%= user.lastname%>">
                    
                </div>

                <div class="inputContainer">
                    <label class="label"for="rol"></label></br>
                    
                    <select name="rol" id="rol">
                        <option value=""hidden selected>Rol</option>
                           <% roles.forEach(({id, name}) => { %>
                            <option value="<%=id%>"<%= id === user.rolId && 'selected' %>><%=name%></option>
                           <% }) %>
                    </select>                
                </div>

                <div class="inputContainer">
                    <label class="label">Email</label></br>
                    <input type="email" class="input" value="<%= user.email %>">
                    
                </div>

                <div class="inputContainer">
                    <label class="label">Telefono</label></br>
                    <input type="text" class="input">
                    
                </div>

                <div class="inputContainer">
                    <label class="label">Direccion</label></br>
                    <input type="text" class="input">                   
                </div>

                <div class="inputContainer">
                    <button type="submit">Guardar</button>     
                    <button type="reset">Cancelar</button>             
                </div>

            </form>

        </div>

    </div>
   </main>
   
   <%- include('./partials/footer') %> 

</body>
</html>